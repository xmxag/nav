<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerSquad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Выберите отряд"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBookingDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Дата"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerSquad"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/textViewBookingStartTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Время начала"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBookingDate"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/textViewBookingEndTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Время конца"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBookingStartTime"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/editTextBookingPurpose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Цель бронирования"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBookingEndTime"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxNotifyFighters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уведомить бойцов отряда"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextBookingPurpose"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>